@model List<Message>
@{
    ViewData["Title"] = "Mesaj Listesi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int counter = 0;
}
<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Gelen Mesaj Listesi</h5>
            <form class="ms-auto position-relative">
                <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-search"></i></div>
                <input class="form-control ps-5" type="text" placeholder="Aranacak Kelimeler">
            </form>
        </div>
        <div class="table-responsive mt-3">
            <table class="table align-middle">
                <thead class="table-secondary">
                <tr>
                    <th>#</th>
                    <th>Adı-Soyadı</th>
                    <th>Konu</th>
                    <th>Email</th>
                    <th>Gönderim Tarihi</th>
                    <th>Durum</th>
                    <th>Mesajı Aç</th>
                    <th>Güncelle</th>
                    <th>Sil</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var message in Model)
                {
                    <tr>
                        <td>@(++counter)</td>
                        <td>@message.NameSurname</td>
                        <td>@message.Subject</td>
                        <td>@message.Email</td>
                        <td>@message.SendDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td><a href="#" class="btn btn-warning">Durum</a></td>
                        <td><a href="/Default/Index/" class="text-primary" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Mesajı Aç"><i class="bi bi-eye-fill"></i></a></td>
                        <td><a href="/Message/UpdateMessage/@message.Id" class="text-warning" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Güncelle"><i class="bi bi-pencil-fill"></i></a></td>
                        <td><a href="/Message/DeleteMessage/@message.Id" class="text-danger" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Sil"><i class="bi bi-trash-fill"></i></a></td>
                    </tr> 
                }
                </tbody>
            </table>
            <a href="/Message/CreateMessage/" class="btn btn-info">Yeni Mesaj Yazısı Girişi</a>
        </div>
    </div>
</div>