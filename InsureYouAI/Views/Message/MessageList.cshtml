@model List<Message>
@{
    ViewData["Title"] = "MessageList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="card shadow-sm rounded-4">
    <div class="card-body">
        <div class="d-flex align-items-center mb-3">
            <h5 class="mb-0 fw-bold">üì• Gelen Mesaj Listesi</h5>

            <form class="ms-auto position-relative">
                <div class="position-absolute top-50 translate-middle-y search-icon px-3">
                    <i class="bi bi-search"></i>
                </div>
                <input class="form-control ps-5 rounded-pill" type="text" placeholder="Aranacak kelimeler...">
            </form>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Ad Soyad</th>
                        <th>Konu</th>
                        <th>Email</th>
                        <th>Tarih</th>
                        <th>AI Kategori</th>
                        <th>√ñncelik</th>
                        <th>Durum</th>
                        <th>Mesajƒ± A√ß</th>
                        <th>G√ºncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>

                            <td class="fw-semibold">@item.NameSurname</td>

                            <td>@item.Subject</td>

                            <td>
                                <span class="text-muted">@item.Email</span>
                            </td>

                            <td>@item.SendDate.ToString("dd-MMM-yyyy")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.AICategory))
                                {
                                    <span class="badge bg-info text-dark px-3 py-2 rounded-pill">
                                        <i class="bi bi-stars me-1"></i> @item.AICategory
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Bekleniyor</span>
                                }
                            </td>
                            <td>
                                @switch (item.Priority)
                                {
                                    case "High":
                                        <span class="badge bg-danger px-3 py-2 rounded-pill">
                                            üî• High
                                        </span>
                                        break;

                                    case "Medium":
                                        <span class="badge bg-warning text-dark px-3 py-2 rounded-pill">
                                            ‚ö†Ô∏è Medium
                                        </span>
                                        break;

                                    default:
                                        <span class="badge bg-success px-3 py-2 rounded-pill">
                                            üü¢ Low
                                        </span>
                                        break;
                                }
                            </td>
                            <td>
                                @if (item.IsRead)
                                {
                                    <span class="badge bg-success">Okundu</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Okunmadƒ±</span>
                                }
                            </td>
                            <td>
                                <a href="/Message/Detail/@item.Id" class="text-primary" data-bs-toggle="tooltip" title="Mesajƒ± A√ß">
                                    <i class="bi bi-eye-fill fs-5"></i>
                                </a>
                            </td>
                            <td>
                                <a href="/Message/UpdateMessage/@item.Id" class="text-warning" data-bs-toggle="tooltip" title="D√ºzenle">
                                    <i class="bi bi-pencil-fill fs-5"></i>
                                </a>
                            </td>
                            <td>
                                <a href="/Message/DeleteMessage/@item.Id" class="text-danger" data-bs-toggle="tooltip" title="Sil">
                                    <i class="bi bi-trash-fill fs-5"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Message/CreateMessage/" class="btn btn-primary rounded-pill px-4 mt-2">
                + Yeni Mesaj Giri≈üi
            </a>
        </div>
    </div>
</div>
