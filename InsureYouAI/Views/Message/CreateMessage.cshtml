@model Message
@{
    ViewData["Title"] = "Mesaj Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Mesaj Girişi</h5>
        </div>
        <form method="post" autocomplete="off">
            <label>Adı-Soyadı</label>
            <input type="text" asp-for="NameSurname" class="form-control" />
            <br/>
            <label>Konu</label>
            <input type="text" asp-for="Subject" class="form-control" />
            <br/>
            <label>Email</label>
            <input type="text" asp-for="Email" class="form-control" />
            <br/>
            <label>Telefon Numarası</label>
            <input type="text" asp-for="PhoneNumber" class="form-control" />
            <br/>
            <label>Mesaj Yazısı</label>
            <textarea asp-for="MessageDetail" class="form-control" rows="5"></textarea>
            <br/>
            <button type="submit" class="btn btn-primary mt-3">Mesajı Kaydet</button>
        </form>
    </div>
</div>