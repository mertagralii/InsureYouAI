@model About
@{
    ViewData["Title"] = "Hakkımızda Yazısı Düzenle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Hakkımızda Yazı Düzenleme</h5>
        </div>
        <form method="post" autocomplete="off">
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <label>Başlık</label>
            <input type="text" asp-for="Title" class="form-control" value="@Model.Title"/>
            <br/>
            <label>Fotoğraf URL</label>
            <input type="text" asp-for="ImageUrl" class="form-control" value="@Model.ImageUrl"/>
            <br/>
            <label>Açıklaması</label>
            <textarea asp-for="Description" class="form-control" rows="5">@Model.Description</textarea>
            <br/>
            <button type="submit" class="btn btn-primary mt-3">Hakkımızda Yazısını Düzenle</button>
        </form>
    </div>
</div>