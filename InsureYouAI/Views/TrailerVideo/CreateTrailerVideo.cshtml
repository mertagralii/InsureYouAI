@model TrailerVideo
@{
    ViewData["Title"] = "Video Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Video Ekle</h5>
        </div>
        <form method="post" autocomplete="off">
            <label>Slider Başlığı</label>
            <input type="text" asp-for="Title" class="form-control" />
            <br/>
            <label>Video Kapak Resmi URL</label>
            <input type="text" asp-for="CoverImageUrl" class="form-control" />
            <br/>
            <label>Video URL</label>
            <input type="text" asp-for="VideoUrl" class="form-control" />
            <br/>
            <button type="submit" class="btn btn-primary mt-3">Video Kaydet</button>
        </form>
    </div>
</div>