<footer class="footer-bg footer-p pt-240" style="background-color: #28314b;">
    <div class="footer-top pb-70">
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-xl-4 col-lg-4 col-sm-6">
                    <div class="footer-widget mb-30" data-aos="fade-up" data-aos-duration="1000">
                        <div class="f-widget-title">
                            <h2> <img src="defaultimages/f_logo.png" alt="img"></h2>
                        </div>
                        <div class="f-contact">
                            <p>@ViewBag.description.ToString()</p>
                        </div>
                        <div class="footer-social mt-10">
                            <a href="#"><i class="fab fa-facebook-f"></i></a>
                            <a href="#"><i class="fab fa-instagram"></i></a>
                            <a href="#"><i class="fab fa-twitter"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-xl-2 col-lg-2 col-sm-6">
                    <div class="footer-widget mb-30" data-aos="fade-up" data-aos-duration="1400">
                        <div class="f-widget-title">
                            <h2>Hızlı Linkler</h2>
                        </div>
                        <div class="footer-link">
                            <ul>
                                <li><a href="~/Default/Index">Ana Sayfa</a></li>
                                <li><a href="~/Default/Index/#about">Hakkımızda</a></li>
                                <li><a href="~/Default/Index/#services-05">Hizmetlerimiz </a></li>
                                <li><a href="~/Default/Index/#contact">Bize Yazın</a></li>
                                <li><a href="~/Blog/BlogList">Bloglar</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-3 col-sm-6">
                    <div class="footer-widget mb-30" data-aos="fade-up" data-aos-duration="1600">
                        <div class="f-widget-title">
                            <h2>İletişim Bilgileri</h2>
                        </div>
                        <div class="f-contact">
                            <ul>
                                <li>
                                    <i class="icon fal fa-phone"></i>
                                    <span>@ViewBag.phone.ToString()</span>
                                </li>
                                <li><i class="icon fal fa-envelope"></i>
                                    <span>
                                        <a href="ViewBag.email">@ViewBag.email.ToString()</a>
                                    </span>
                                </li>
                                <li>
                                    <i class="icon fal fa-map-marker-check"></i>
                                    <span>@ViewBag.address.ToString()</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                @await Component.InvokeAsync("_DefaultFooterLast3ArticleComponentPartial")
            </div>
        </div>
    </div>
    <div class="copyright-wrap">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <div class="copy-text text-center">
                        Copyright &copy; Insureyou @DateTime.Now.Year | Tüm Hakları Saklıdır.
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>