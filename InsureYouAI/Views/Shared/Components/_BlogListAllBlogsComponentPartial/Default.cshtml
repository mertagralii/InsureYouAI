@model List<ArticleListViewModel>
<div class="col-lg-8">
    @foreach (var item in Model)
    {
        <div class="bsingle__post mb-50">
            <div class="bsingle__post-thumb">
                <img src="@item.ImageUrl" alt="">
            </div>
            <div class="bsingle__content">
                <div class="meta-info">
                    <ul>
                        <li><i class="fal fa-user"></i>@item.Author</li>
                        <li><i class="fal fa-calendar-alt"></i>@item.CreatedDate.ToString("d")</li>
                        <li><i class="fal fa-calendar-alt"></i> Kategori:@item.CategoryName</li>
                        <li><i class="fal fa-calendar-alt"></i>@item.CommentCount Yorum</li>
                    </ul>
                </div>
                <h2>
                    <a href="/Blog/BlogDetail/@item.ArticleId">@item.Title</a></h2>
                <p>@item.Content.Substring(0,300)...</p>
                <div class="blog__btn">
                    <a href="/Blog/BlogDetail/@item.ArticleId" class="btn">Devamını Oku</a>
                </div>
            </div>
        </div>   
    }
</div>