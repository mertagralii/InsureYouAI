<section id="recent-posts-4" class="widget widget_recent_entries">
    <h2 class="widget-title">Son YazÄ±lar</h2>

    <ul style="list-style:none; padding:0;">
        @foreach (var item in Model)
        {
            <li style="margin-bottom:15px; padding-bottom:15px; border-bottom:1px solid #e5e5e5;">
                <a href="#" style="font-size:16px; font-weight:600; text-decoration:none; color:#222;">
                    <i class="fas fa-shield-alt" style="color:#1e88e5; margin-right:8px;"></i>
                    @item.Title
                </a>
                <div style="font-size:13px; color:#888; margin-top:4px;">
                    <i class="far fa-calendar-alt" style="margin-right:5px;"></i>
                    @item.CreatedDate.ToString("dd-MMM-yyyy")
                </div>
            </li>
        }
    </ul>
</section>