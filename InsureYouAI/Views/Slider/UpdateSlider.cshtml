@model Slider
@{
    ViewData["Title"] = "Slider Düzenle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Slider Düzenle</h5>
        </div>
        <form method="post" autocomplete="off">
            <input type="hidden" asp-for="Id" value="@Model.Id"/>
            <label>Slider Başlığı</label>
            <input type="text" asp-for="Title" class="form-control" value="@Model.Title"/>
            <br/>
            <label>Açıklama</label>
            <input type="text" asp-for="Description" class="form-control" value="@Model.Description"/>
            <br/>
            <label>Görsel URL</label>
            <input type="text" asp-for="ImageUrl" class="form-control" value="@Model.ImageUrl"/>
            <br/>
            <button type="submit" class="btn btn-primary mt-3">Slideri Düzenle</button>
        </form>
    </div>
</div>