@model AboutItem
@{
    ViewData["Title"] = "Hakkımızda Madde Yazısı Düzenle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Hakkımızda Madde Yazı Düzenle</h5>
        </div>
        <form method="post" autocomplete="off">
            <input type="hidden" asp-for="Id" value="@Model.Id"/>
            <label>Detay</label>
            <textarea asp-for="Detail" class="form-control" rows="5">@Model.Detail</textarea>
            <br/>
            <button type="submit" class="btn btn-success mt-3">Alanı Düzenle</button>
        </form>
    </div>
</div>