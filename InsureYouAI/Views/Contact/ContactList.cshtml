@model List<Contact>
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int counter = 0;
}
<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Sigorta İletişim Listesi</h5>
            <form class="ms-auto position-relative">
                <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-search"></i></div>
                <input class="form-control ps-5" type="text" placeholder="search">
            </form>
        </div>
        <div class="table-responsive mt-3">
            <table class="table align-middle">
                <thead class="table-secondary">
                <tr>
                    <th>#</th>
                    <th>Açıklama</th>
                    <th>Telefon Numarası</th>
                    <th>Mail</th>
                    <th>Adress</th>
                    <th>İşlemler</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var contact in Model)
                {
                    <tr>
                        <td>@(++counter)</td>
                        <td>@contact.Description</td>
                        <td>@contact.PhoneNumber</td>
                        <td>@contact.Email</td>
                        <td>@contact.Address</td>
                        <td>
                            <div class="table-actions d-flex align-items-center gap-3 fs-6">
                                <a href="/Default/Index/" class="text-primary" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Sitede Gör"><i class="bi bi-eye-fill"></i></a>
                                <a href="/Contact/UpdateContact/@contact.Id" class="text-warning" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Güncelle"><i class="bi bi-pencil-fill"></i></a>
                                <a href="/Contact/DeleteContact/@contact.Id" class="text-danger" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Sil"><i class="bi bi-trash-fill"></i></a>
                            </div>
                        </td>
                    </tr> 
                }
                </tbody>
            </table>
            <a href="/Contact/CreateContact/" class="btn btn-info">Yeni İletişim Girişi</a>
        </div>
    </div>
</div>