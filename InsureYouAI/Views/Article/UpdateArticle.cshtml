@model Article
@{
    ViewData["Title"] = "Makale Düzenle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Makale Düzenle</h5>
        </div>
        <form method="post" autocomplete="off">
            <input type="hidden" asp-for="Id" value="@Model.Id"/>
            <label>Başlık</label>
            <input type="text" asp-for="Title" class="form-control" value="@Model.Title"/>
            <br/>
            <label>Kapak Fotoğrafı URL</label>
            <input type="text" asp-for="CoverImageUrl" class="form-control" value="@Model.CoverImageUrl"/>
            <br/>
            <label>Makale Detay Kapak Görseli</label>
            <input type="text" asp-for="MainCoverImageUrl" class="form-control" value="@Model.MainCoverImageUrl"/>
            <br/>
            <label>Kategori</label>
            <input type="text" asp-for="CategoryId" class="form-control"/>
            <br/>
            <label>İçerik</label>
            <textarea class="form-control" asp-for="Content" rows="15">@Model.Content</textarea>
            <br/>
            <button type="submit" class="btn btn-primary mt-3">Makale Düzenle</button>
        </form>
    </div>
</div>