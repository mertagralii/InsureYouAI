@model Article
@{
    ViewData["Title"] = "Makale Oluştur";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Yeni Makale Oluşturma Sayfası</h5>
        </div>
        <form method="post" autocomplete="off">
            <label>Başlık</label>
            <input type="text" asp-for="Title" class="form-control" />
            <br/>
            <label>Kapak Fotoğrafı URL</label>
            <input type="text" asp-for="CoverImageUrl" class="form-control" />
            <br/>
            <label>Makale Detay Kapak Görseli</label>
            <input type="text" asp-for="MainCoverImageUrl" class="form-control" />
            <br/>
            <label>Kategori</label>
            <input type="text" asp-for="CategoryId" class="form-control" />
            <br/>
            <label>İçerik</label>
            <textarea class="form-control" asp-for="Content" rows="15"></textarea>
            <br/>
            <button type="submit" class="btn btn-primary mt-3">Makale Oluştur</button>
        </form>
    </div>
</div>
