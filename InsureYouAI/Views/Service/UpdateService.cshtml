@model Service
@{
    ViewData["Title"] = "Hizmet Düzenle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Hizmet Düzenle</h5>
        </div>
        <form method="post" autocomplete="off">
            <input type="hidden" asp-for="Id" value="@Model.Id"/>
            <label>Başlık</label>
            <input type="text" asp-for="Title" class="form-control" value="@Model.Title"/>
            <br/>
            <label>Açıklama</label>
            <input type="text" asp-for="Description" class="form-control" value="@Model.Description"/>
            <br/>
            <label>Image URL</label>
            <input type="text" asp-for="ImageUrl" class="form-control" value="@Model.ImageUrl"/>
            <br/>
            <label>İkon URL</label>
            <input type="text" asp-for="IconUrl" class="form-control" value="@Model.IconUrl"/>
            <br/>
            <button type="submit" class="btn btn-primary mt-3">Hizmet Düzenle</button>
        </form>
    </div>
</div>