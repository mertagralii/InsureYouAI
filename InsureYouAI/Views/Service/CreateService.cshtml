@model Service
@{
    ViewData["Title"] = "Yeni Hizmet Giriş";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Yeni Hizmet Giriş</h5>
        </div>
        <form method="post" autocomplete="off">
            <label>Başlık</label>
            <input type="text" asp-for="Title" class="form-control" />
            <br/>
            <label>Açıklama</label>
            <input type="text" asp-for="Description" class="form-control" />
            <br/>
            <label>Image URL</label>
            <input type="text" asp-for="ImageUrl" class="form-control" />
            <br/>
            <label>İkon URL</label>
            <input type="text" asp-for="IconUrl" class="form-control" />
            <br/>
            <button type="submit" class="btn btn-primary mt-3">Hizmet Kaydet</button>
        </form>
    </div>
</div>